{
    "compilerOptions": {
        "incremental": true,
        "target": "es5",
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "module": "commonjs",
        "baseUrl": "./src",
        "lib": [
            "ESNext"
        ],
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "allowJs": true,
        "sourceMap": true,
        "outDir": "dist",
        "removeComments": true,
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true,
        "paths": {
            "@modules/*": [
                "modules/*"
            ],
            "@config/*": [
                "config/*"
            ],
            "@shared/*": [
                "shared/*"
            ],
            "@errors/*": [
                "errors/*"
            ],
            "@utils/*": [
                "utils/*"
            ]
        }
    },
    "include": [
        "src",
        "prisma",
        "@types"
    ]
}